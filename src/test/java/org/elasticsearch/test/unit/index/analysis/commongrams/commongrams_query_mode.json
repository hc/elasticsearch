{
    "index":{
        "analysis":{
            "analyzer":{
                "commongramsAnalyzer":{
                    "tokenizer":"whitespace",
                    "filter":[ "common_grams" ]
                },
                "commongramsAnalyzer_file":{
                    "tokenizer":"whitespace",
                    "filter":[ "common_grams_file" ]
                }
            },
            "filter":{
                "common_grams":{
                    "type":"common_grams",
                    "query_mode" : true,
                    "words":[
                        "brown",
                        "fox"
                    ]
                },
                "common_grams_file":{
                    "type":"common_grams",
                    "query_mode" : true,
                    "words_path":"org/elasticsearch/test/unit/index/analysis/commongrams/words.txt"
                }
            }
        }
    }
}
